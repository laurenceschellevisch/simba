procedure fixChat();
var
  ScrollX, ScrollY: Integer;
begin
  ScrollX := 507 + Random(8);
  ScrollY := 451 + Random(8);
  if (getColor(502, 442) = 1646629) then // changed coords + color
  begin
    mouse(point(ScrollX,ScrollY), 0, 0, MOUSE_MOVE);
