procedure setDefaultZoom(Lock: Boolean = false);
var
  col : TColEx;
begin
  openSettingsTab(1);
  mouseBox(toBox(560,260,584,282), MOUSE_RIGHT);
  chooseOption('Restore');
  if Lock then
  begin
    col.create(200, 10);
    if (not col.findIn(toBox(560,260,584,282))) then
      mouseBox(toBox(560,260,584,282), MOUSE_LEFT);
  end;
end;

function setBrightness(Brightness: Integer): Boolean;
var
  Pnt    : TPoint;
  PntArr : TPointArray;
begin
  if not openSettingsTab(1) then
    exit(false);

  if (not inRange(Brightness, 1, 4)) then
  begin
    warn('SetBrightness must be between 1 and 4', WT_CORE);
    exit(false);
  end else
  begin
    PntArr := [Point(607, 304),Point(638, 304),Point(669, 304),Point(703, 304)];
    Pnt    := PntArr[(Brightness - 1)];
    if (not (getColor(Pnt.X, Pnt.Y) = 16777215)) then
    begin
      mouseBox(toBox(Pnt.X,Pnt.Y,Pnt.X+4,Pnt.Y+4), MOUSE_LEFT);
      exit(true);
    end else
      result := true;
  end;
end;

function setFixedClient(): Boolean;
var
  tCol : TColEx;
begin
  Result := False;
  if not openSettingsTab(1) then
    Exit;

  tCol.create(1777019, 15);
  if (tCol.count(toBox(573,327,632,377)) > 50) then
    exit(true)
  else
  begin
    mouseBox(toBox(573,327,632,377), MOUSE_LEFT);
    exit(true);
  end;
end;

